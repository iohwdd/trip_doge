<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tripdog.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.tripdog.model.entity.UserDO">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="nickname" property="nickname" jdbcType="VARCHAR"/>
        <result column="avatar_url" property="avatarUrl" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="insert" parameterType="com.tripdog.model.entity.UserDO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_user (email, password, nickname, avatar_url, status, created_at, updated_at)
        VALUES (#{email}, #{password}, #{nickname}, #{avatarUrl}, #{status}, NOW(), NOW())
    </insert>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM t_user WHERE id = #{id}
    </delete>

    <update id="updateById" parameterType="com.tripdog.model.entity.UserDO">
        UPDATE t_user SET
            email = #{email},
            password = #{password},
            nickname = #{nickname},
            avatar_url = #{avatarUrl},
            status = #{status},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT * FROM t_user WHERE id = #{id}
    </select>

    <select id="selectByEmail" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT * FROM t_user WHERE email = #{email}
    </select>

    <select id="countByEmail" parameterType="java.lang.String" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM t_user WHERE email = #{email}
    </select>

</mapper>
